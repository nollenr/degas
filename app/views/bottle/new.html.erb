<h1>Add Bottle To Cellar</h1>

<div class="row">
  <div class="span6 offset3">
    <%= simple_form_for @bottle, html: {class: 'form-horizontal'} do |f| %>

      <%= render 'shared/error_messages', object: f.object %>

      <%= f.input :bottle_id, label: 'Bottle Identifier' %>

      <%= f.input :cellar_location %>

      <%= f.input :vintage, label: "Vintage (Year)" %>

      <%= f.input :drink_by_year, label: "Drink By (Year)" %>

      <%= f.input :name %>

      <%= f.input :vineyard %>

      <%= f.input :price %>

      <%= f.association :grape,  collection: Grape.all(order: 'name'), include_blank: false %>

      <%= f.association :winery, collection: Winery.all(order: 'name'), include_blank: true %>

      <%= f.button :submit, label: "Create Bottle", class: "btn btn-large btn-primary" %>
      <%= link_to "Cancel", bottles_path, class: 'btn btn-large' %>

      <!--  collection_select :bottle, :grape_id, Grape.all, :id, :name, selected: @bottle.grape_id  -->

    <% end %>
  </div>
</div>


