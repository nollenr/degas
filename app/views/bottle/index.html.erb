<div class="hero-unit">
  <h2>Bottles</h2>
</div>

<table class="table table-hover">
  <tr>
    <th>Bottle Number</th>
    <th>Grape</th>
  </tr>

  <% @bottles.each do |bottle| %>
    <tr>
      <td><%= bottle.bottle_id %></td>
      <td><%= bottle.grape.name %></td>
			<td><%= bottle.availability %></td>
      <% if bottle.available %>
			  <td><%= link_to "Consume", consume_bottle_path(bottle.id), method: :put %>
      <% end %>
    </tr>
  <% end %>

</table>
