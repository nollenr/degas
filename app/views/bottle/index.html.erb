<div class="hero-unit">
  <h2>Bottles</h2>
</div>

<%= search_form_for @search, html: {class: "form-inline"}, remote:true do |f| %>
  <label>Winery Name</label>
  <%= f.text_field :winery_name_cont, class: "input-small search-query", placeholder: "Wine Name"%>

  <label>Grape</label>
  <%= f.text_field :grape_name_cont, class: "input-small search-query", placeholder: "Grape"%>

  <label>Show Only Available Bottles</label>
  <%= f.check_box :available_true, class: "input-small search-query" %>

  <%= f.submit "Search"%>
<% end %>

<%= render partial: "bottle_header" %>


