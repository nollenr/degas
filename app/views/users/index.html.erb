<% provide(:title, 'User Index') %>

<div class="jumbotron">
  <h1>Users</h1>
</div>

<div class="users">
  <table class="table table-bordered table-condensed">
    <thead>
      <th>Username</th>
      <th>E-Mail</th>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td> <%= user.username %> </td>
          <td> <%= user.email %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
