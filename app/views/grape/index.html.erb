<% provide(:title, 'Grape Index') %>
<div class="hero-unit">
  <h2>Grapes</h2>
</div>

<table class="table table-hover">
  <tr>
    <th>Grape</th>
    <th>Color</th>
  </tr>

  <% @grapes.each do |grape| %>
    <tr>
      <td><%= grape.name %></td>
      <td><%= grape.color %></td>
    </tr>
  <% end %>

</table>
