<% provide(:title, 'Winery Index') %>

<div class="hero-unit hero-unit-bottle-index">
    <h1>Wineries</h1>
</div>

<div class="row-fluid">               <!-- enclosing row start -->
  <div class="span12">                <!-- enclosing row size start -->
    <div class="well well-small" >    <!-- well opening -->
      <h2 class="search-title">Search</h2>
      <%= search_form_for @search, html: {class: "form-inline search-form"} do |f| %>
        <div class="row-fluid">       <!-- search row1 start-->
          <div class="span10">        <!-- search options column1 size start --> 
            <div class="search-inputs" >
              <div class="row-fluid">
                  <label>Winery Name</label>  
                  <%= f.text_field :name_cont, class: "input-small", placeholder: "Winery Name"%>
                  <label>Country</label>  
                  <%= f.text_field :country_cont, class: "input-small", placeholder: "Country"%>
                  <label>Location 1 (State or Territory, Ex: California)</label>  
                  <%= f.text_field :location1_cont, class: "input-small", placeholder: "Location 1"%>
                  <label>Location 2 (Area, Ex: Sonoma)</label>  
                  <%= f.text_field :location2_cont, class: "input-small", placeholder: "Location 2"%>
                  <label>Location 3 (Sub Area, Ex: Alexander Valley)</label>  
                  <%= f.text_field :location3_cont, class: "input-small", placeholder: "Location 3"%>
              </div>
            </div>
          </div>                <!-- search options column1 size end -->
          <div class="span2">   <!-- serach button column2 size start -->
            <%= f.submit "Update List"%> 
          </div>                <!-- serach button column2 size end -->
        </div>                  <!-- search row1 end-->   
      <% end %>
    </div>                    <!-- well close -->
  </div>                      <!-- enclosing row size end -->
</div>                        <!-- enclosing row end -->


<%= render @wineries %>

<br />

<%= link_to 'New Winery', new_winery_path %>
