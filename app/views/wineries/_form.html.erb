<%= simple_form_for @winery, html: {class: 'form-horizontal'} do |f| %>

  <div class="row-fluid">
    <div class="span9 offset3">
    <%= render 'shared/error_messages', object: f.object %>
    </div>
  </div>

<div class="row-fluid">
  <div class="span9 offset3">
      <%= f.input :name, label: 'Winery Name' %>

      <%= f.input :country, as: :string %>

      <%= f.input :location1, label: "Location 1" %>

      <%= f.input :location2, label: "Location 2" %>

      <%= f.input :location3, label: "Location 3" %>

      <%= f.input :winery_url %>

      <%= f.input :twitter_url %>

      <%= f.input :facebook_url %>

      <%= f.button :submit, label: "Create Winery", class: "btn btn-large btn-primary" %>
      <%= link_to "Cancel", wineries_path, class: 'btn btn-large' %>

  </div>
</div>

<% end %>
