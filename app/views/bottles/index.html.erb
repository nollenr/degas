<% provide(:title, 'Bottle Index') %>

<div class="jumbotron">
  <h1>Cellar List</h1>
</div>

<hr />
<div class="CSVDownload visible-desktop">
  Download:
  <%= link_to "CSV", bottles_path(format: "csv") %>
</div>

<div class="row">                         <!-- enclosing row 0 start -->
  <div class="col-md-12">                 <!-- enclosing row size start -->
    <div id="searchForm" class="well well-sm" >    <!-- well opening -->

      <h2 class="search-title">Search</h2>

      <%= search_form_for @search, html: {class: "search-form"}, remote: true do |f| %>
        <div class="row">                 <!-- search row1 start-->
          
          <div class="col-md-10">         <!-- search options column1 size start --> 
            <div class="row">             <!-- bottle id row start -->
              <div class="col-md-2">
                <label>Bottle Id</label>
                <%= f.text_field :bottle_id_eq, class: "form-control", placeholder: "Bottle Id"%>
              </div>
  
              <div class="col-md-2">
                <label>Winery Name</label>  
                <%= f.text_field :winery_name_cont, class: "form-control", placeholder: "Wine Name"%>
              </div>
  
              <div class="col-md-2">
                <label>Grape</label>
                <%= f.text_field :grape_name_cont, class: "form-control", placeholder: "Grape"%>
              </div>
  
              <div class="search-dropdown col-md-3">
                <label>Grape Color (Red/White)</label>
                <%= f.collection_select :grape_color_eq, Grape.select(:color).uniq, :color, :color, {include_blank: 'Wine Color'}, {class: "form-control"} %>
              </div>
            </div>                        <!-- bottle id row end-->
          </div>                          <!-- search options column1 size end -->
          
          <div class="col-md-2">          <!-- serach button column2 size start -->
            <div class="row">
              <div class="col-md-8">
                <button class="btn btn-primary btn-block" type="submit">
                  <span class="glyphicon glyphicon-search"></span>Search
                </button>
                <!-- %= f.submit "Update List", class: "btn btn-primary btn-block", id: "cellarListSearch", type: "button"% -->
              </div>
            </div> 
            <div class="row">
              <div class="col-md-8">     
                <%= link_to bottles_path, class: "btn btn-default btn-block" do %>
                  <span class="glyphicon glyphicon-remove"></span>Clear
                <% end %>
              </div>
            </div>
          </div>                          <!-- serach button column2 size end -->
          
        </div>                            <!-- search row1 end-->

        <div class="row">                 <!-- 2nd row in the well for the checkbox list of bottle types -->
          <div class="col-md-12">
            <div class="form-group">
              <label> Bottle Types </label>
              <div class="form-inline">
                <% if params.has_key?(:q) %>
                  <% # When would this ever be set? This was probably before I was using AJAX %>
                <% else %>
                  <% params[:q] = {:bottle_type_name_in => []}%>
                <% end %>
                <% BottleType.order(:display_order).pluck(:name).each do |xtype| %>
                  <% xyz = params[:q][:bottle_type_name_in] %>
                  <% #Check to see if the bottle_type was included in the last search. %>
                  <% # if it was, set the checked variable to true, if not, set it to false %>
                  <% if !xyz.nil? %>
                    <% checked = params[:q][:bottle_type_name_in].include?(xtype) %>
                  <% else %>
                    <% checked = false %>
                  <% end %>
                  <label class="checkbox-inline" > <%= check_box_tag 'q[bottle_type_name_in][]', xtype, checked %><%= xtype %></label>
                <% end %>
              </div>                      <!-- end span12 -->
            </div>                        <!-- end form group -->
          </div>                          <!-- end the enclosing column --> 
        </div>                            <!-- end the 2nd row in the well -->
        
        <div class="row">
          <div class="col-md-10"
            <div class="form-group"> 
              <label>Other Search Options</label>
              <div class="row">            
              	<div class="col-md-6">
                  <label class="checkbox-inline">
                    <%= f.check_box :available_true, checked: true %>Show Only Available Bottles
                  </label> 
                </div> 
                <div class="col-md-6">
                  <label class="checkbox-inline">
                    <%= f.check_box :is_for_rating_only_true, checked: false%>Include Rating Only Bottles
                  </label>
                </div>
              </div>
            </div>
          </div>
        </div>

        <%= hidden_field_tag :direction, params[:direction] %>
        <%= hidden_field_tag :sort, sort_column  %>
    
      <% end %>
    </div>                    <!-- well close -->
  </div>                      <!-- enclosing row size end -->
</div>                        <!-- enclosing row end -->

<hr />

<%= render partial: "bottle_header" %>

