<% provide(:title, 'Rate a Bottle') %>

<div class="hero-unit hero-unit-bottle-index">
    <h1>Rate a Bottle</h1>
</div>

<table class="table table-hover">
  <tr>
    <th>Bottle Id</th>
    <th>Cellar Location</th>
    <th>Winery</th>
    <th>Grape</th>
    <th>Vintage</th>
    <th>Name</th>
    <th>Vineyard</th>
    <th>Drink By Year</th>
    <th>Price</th>
    <th>Consumed or Available</th>
  </tr>
  <tr>
    <td><%= @bottle.bottle_id %></td>
    <td><%= @bottle.cellar_location %></td>
    <td><%= @bottle.winery.name %></td>
    <td><%= @bottle.grape.name %></td>
    <td><%= @bottle.vintage %></td>
    <td><%= @bottle.name %></td>
    <td><%= @bottle.vineyard %></td>
    <td><%= @bottle.drink_by_year %></td>
    <td><%= number_to_currency(@bottle.price) %></td>
    <td>Consumed or Available</td>
  </tr>
</table>

<%= simple_form_for @bottle do |f| %>
  <div class = 'form-vertical well'>
    <fieldset>
      <legend>Rate This Bottle</legend>
      <%= f.input :rating, :collection => 0..9, as: :radio_buttons, item_wrapper_class: 'inline', label: false, required: true %>
      <%= hidden_field_tag(:rating, "1") %>
    <div class="form-actions">
      <%= f.button :submit, class: 'btn btn-primary' %>

    </div>

    </fieldset>
  </div>
<% end %>
