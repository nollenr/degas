$(function() {

  // Add an event handler to each graphic to control the opening and closing of the list
  $(".collapse-btn").click(function() {
    // console.log("Clicked on a collapse button!");
    $(this).children("span:first").toggleClass("glyphicon-chevron-down");
    $(this).children("span:first").toggleClass("glyphicon-chevron-up");
  });

  
  //Add an event handler to each row to create highlighting when hovered
  $(".dataline").hover(
    function() {
      $(this).siblings(".dataval").css('background-color', 'lightgray');
      $(this).css('background-color', 'lightgray');
    },
    function() {
      $(this).siblings(".dataval").css('background-color', 'transparent');
      $(this).css('background-color', 'transparent');
    }
  );

  // Using bootstrap JavaScript to control collapse of "disposition reasons"
  // on bottle-new/edit page.  Using JavaScript since I am not toggling
  // the collapse. 
  $('#bottle_available_true').click(function() {
    console.log("Clicked on the true radio button");
    $('#disposition').addClass('dispositionHidden');
  });
  $('#bottle_available_false').click(function() {
    console.log("Clicked on the false radio button");
    $('#disposition').removeClass('dispositionHidden');
  });
});