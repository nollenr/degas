This was added to the "app/assets/javascripts/dialog.js.erb" page
$(function(){
	$("#myDialog").dialog({
		autoOpen: false,
		modal: true,
		buttons: {
			"Delete all items": function(){
				$(this).dialog("close");
			},
			"Cancel": function(){
				$(this).dialog("close");
			}
		}
	});
	$("#opener").click(function(){
		$("#myDialog").dialog("open");
	});
});
